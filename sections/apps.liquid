<div class="page-content-wrapper product-single">
  
  <div class="page-content">

    {%- if section.settings.title != blank -%}
      <h2 class="section-heading text-center">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <div class="rte">
        {{ section.settings.text }}
      </div>
    {%- endif -%}

    {%- for block in section.blocks -%}
      {%- render block -%}
    {%- endfor -%}
    
  </div>
 
</div>

{% schema %}
  {
    "name": "App",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ],
    "presets": [
      {
        "name": "Apps"
      }
    ]
  }
{% endschema %}
